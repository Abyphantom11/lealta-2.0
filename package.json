{
  "name": "lealta-mvp",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "node scripts/copy-service-worker.js && next build",
    "start": "next start -p 3001",
    "export": "next export",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "typecheck": "tsc --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test-ai": "node test-gemini.js",
    "pre-commit": "npm run lint && npm run typecheck && npm run test",
    "health-check": "node scripts/health-check.js",
    "migrate:export": "node scripts/export-sqlite-data.js",
    "migrate:import": "node scripts/import-to-postgres.js",
    "migrate:validate": "node scripts/validate-migration.js",
    "migrate:test-connection": "node scripts/import-to-postgres.js --test-connection",
    "migrate:quick-check": "node scripts/validate-migration.js --quick",
    "production:check": "node scripts/production-deployment.js",
    "production:deploy": "npm run production:check && vercel --prod",
    "redis:test": "node scripts/test-redis.js",
    "sentry:test": "node scripts/test-sentry.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3001 && cross-env NODE_ENV=development electron .\"",
    "electron-build": "npm run build && npm run export && electron-builder",
    "dist": "npm run build && npm run export && electron-builder --publish=never",
    "dist-all": "npm run build && npm run export && electron-builder -mwl",
    "pack": "npm run build && npm run export && electron-builder --dir",
    "extract-components": "ts-node -P tsconfig.scripts.json src/scripts/extract-components.ts",
    "check-auth": "ts-node -P tsconfig.scripts.json src/scripts/check-auth-status.ts",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "ANALYZE=true npm run build",
    "analyze:browser": "ANALYZE=true npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "lighthouse": "npx lighthouse http://localhost:3001 --output=html --output-path=./lighthouse-report.html --chrome-flags=\"--headless\"",
    "perf-audit": "npm run build && npm run lighthouse",
    "optimize": "node scripts/performance-optimizer.js",
    "migrate:base64": "ts-node scripts/migrate-base64-to-files.ts",
    "cleanup:images": "node scripts/cleanup-images.js",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "start:prod": "cross-env NODE_ENV=production npm run start",
    "cache:clear": "rimraf .next node_modules/.cache .cache",
    "performance:full-audit": "npm run cache:clear && npm run build:prod && npm run lighthouse",
    "bundle:size-check": "npm run build && npx bundlesize",
    "deploy:optimized": "npm run optimize && npm run build:prod && vercel --prod"
  },
  "dependencies": {
    "@auth/prisma-adapter": "latest",
    "@emotion/is-prop-valid": "^1.3.1",
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.16.2",
    "@sentry/nextjs": "^10.12.0",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.4",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "latest",
    "dotenv": "^17.2.2",
    "framer-motion": "^11.0.0",
    "lucide-react": "latest",
    "multer": "^2.0.2",
    "next": "^14.2.5",
    "next-auth": "latest",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^19.1.1",
    "recharts": "^3.1.2",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "tesseract.js": "latest",
    "uuid": "^13.0.0",
    "zod": "latest",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "@next/bundle-analyzer": "^15.5.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__parser": "^7.0.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/bcryptjs": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "8.57.1",
    "eslint-config-next": "15.5.2",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "ts-node": "latest",
    "typescript": "latest",
    "wait-on": "^8.0.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "build": {
    "appId": "com.lealta.mvp",
    "productName": "lealta MVP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "publisherName": "lealta Systems"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
